###
# kubernetes system config
#
# The following values are used to configure the kube-apiserver
#

# The address on the local server to listen to.
KUBE_API_ADDRESS="--address=0.0.0.0"

# The port on the local server to listen on.
# KUBE_API_PORT="--port=8080"

# Port minions listen on
# KUBELET_PORT="--kubelet_port=10250"

# Address range to use for services
KUBE_SERVICE_ADDRESSES="--portal_net={{ kube_service_addresses }}"

# Location of the etcd cluster
KUBE_ETCD_SERVERS="--etcd_servers=http://{{ etcd_ip_address }}:4001"

# default admission control policies
KUBE_ADMISSION_CONTROL="--admission-control=NamespaceLifecycle,NamespaceExists,LimitRanger,SecurityContextDeny,ResourceQuota"

{% if is_aws %}

# AWS-related options
KUBE_API_ARGS="--cloud_provider=aws --cloud_config=/etc/aws.conf --cluster_name={{ kube_aws_cluster_name }}"

# Location of AWS credentials
AWS_CREDENTIAL_FILE="/etc/aws/credentials"

{% else %}

# Add you own!
KUBE_API_ARGS=""

{% endif %}
